.decor-wrapper
	bg(50%, 50%)
	background-size cover
	&__blue
		background-image url('../img/backgrounds/blue-decor.jpg')
		background-size 100% 1750px
		background-position top center
		
	&__grey
		background-image url('../img/backgrounds/grey-decor.jpg')
		
	&__jeans
		background-image url('../img/backgrounds/decor-jeanse.jpg')

.sect__promo
	overflow hidden

.promo-block
	position relative
	background-color $basic-white-color
	min-height 740px
	padding 165px 30px 25px 0
	
	&:before
		pseudo()
		position absolute
		right 100%
		top 0
		bottom 0
		width 10000%
		background-color inherit
		margin-right -2px
		
	&__content
		position relative
		z-index 1
	&__img
		display block
		position absolute
		right 0
		bottom 0
		width 680px
		pointer-events none
		
	&__title
		font 46px $SemiBold
		line-height 1.15
		margin-bottom 35px
		span
			color $accent-color
			
	&__subtitle
		color $light-accent-color
		font-size 22px
		margin-bottom 100px
		
.promo-form__col
	width 100%
	max-width 780px
	
	.btn
		padding-left 10px
		padding-right 10px
		width 100%
	

		

.promo-speaker
	margin-bottom 65px
	&__name
		color $light-accent-color
		font-size 22px
		margin-bottom 10px
	&__city
		color $lighter-accent-color
		

.congress-info
	position relative
	&__date
		position absolute
		horisontal-center()
		bottom 100%
		margin-bottom 45px
		text-align center
		font 30px $SemiBold
		white-space nowrap
		span
			display block
			color $secondary-color
			line-height 1
			font 79px $Eng
	&__city
		background-color #12151f
		flex-col-center()
		font 43px $SemiBold
		line-height 1
		padding 15px 50px
		height 100px
		color $basic-white-color


// About
.sect__about
	padding-top 130px
	
.about-speaker
	&__text
		max-width 750px
		font-size 29px
		margin 0 auto 45px auto
		color $basic-white-color
		p
			padding-left 60px
			
	&__title
	
		margin-bottom 55px
	
		
		span
			color $secondary-color
			
	&__photo
		position relative
		display flex
		justify-content flex-end
	
		img
			max-width 760px
			display block
			border-radius 0 0 25px 25px
			

.ola
	display inline-block
	text-transform uppercase
	color $secondary-color
	font 177px $Eng
	line-height 1
	position absolute
	left 0
	vertical-center()
	z-index 1
	padding-bottom 45px
	&:before
		pseudo()
		position absolute
		bottom 0
		left 20px
		width 290px
		height 10px
		background-color $secondary-color


// ADvantage
.sect__advantages
	padding-top 170px
	margin-top -90px
	
.advantages
	padding-top 170px
	margin-top -75px
	
	&__row
		margin-left -45px
		margin-right -45px
	
.advantage
	font-size 18px
	color $light-text-color
	
	&__title
		color $accent-color
		font 30px $SemiBold
		margin-bottom 30px
	&__wrapper
		padding 0 45px 40px
		

// live show
.live-show
	position relative
	margin-bottom 60px
	&__title
		position absolute
		left calc(33.33333% + 30px)
		top 0
		
	.thumbnail
		padding-top 105%
	&__col
		color $lighter-text-color
		font-size 18px
		&:last-child,
		&:nth-child(2)
			padding-top 190px
		&:last-child
			.live-show-slider,
			.swiper-container
				height 100%
			.thumbnail
				padding-top 0
				height 100%
		
		p
			margin-top 45px
			
	&__wrapper
		padding-bottom 180px
			

// congress
.sect__congress
	margin-top -200px
	padding-bottom 180px
	position relative
	z-index 2
	background rgb(218,237,247)
	background -moz-linear-gradient(0deg, rgba(218,237,247,1) 0%, rgba(239,244,250,1) 100%)
	background -webkit-linear-gradient(0deg, rgba(218,237,247,1) 0%, rgba(239,244,250,1) 100%)
	background linear-gradient(0deg, rgba(218,237,247,1) 0%, rgba(239,244,250,1) 100%)
	&:before
		pseudo()
		width 100%
		position absolute
		top -180px
		left 0
		pointer-events none
		height 700px
		background rgb(255,255,255)
		background -moz-linear-gradient(0deg, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 25%, rgba(255,255,255,1) 75%, rgba(255,255,255,0) 100%)
		background -webkit-linear-gradient(0deg, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 25%, rgba(255,255,255,1) 75%, rgba(255,255,255,0) 100%)
		background linear-gradient(0deg, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 25%, rgba(255,255,255,1) 75%, rgba(255,255,255,0) 100%)



.congress-schedule
	border 1px solid $accent-color
	padding 50px
	
	&__uptitle
		font 24px $SemiBold
		color $accent-color
		line-height 1
		margin-bottom 15px
	&__title
		text-transform uppercase
		font 76px $Bold
		line-height 1.1
		margin-bottom 70px
	&__subtitle
		font 24px $SemiBold
		margin-bottom 60px
		margin-top -45px
	&__item
		margin-bottom 50px
		padding-bottom 50px
		border-bottom 1px solid $accent-color
		display flex
		flex-wrap nowrap
		align-items flex-start
		color $light-text-color
		&--time
			flex none
			width 240px
			flex-col-center()
			white-space nowrap
			text-align center
			height 80px
			background-color $accent-color
			box-shadow  0px 14px 26px -16px rgba(3,70,255,0.94)
			margin-right 40px
			border-radius 21px
			color $basic-white-color
			font 24px $SemiBold
			line-height 1
		&--descr
			
			&_title
				font 24px $SemiBold
				color $text-color
				margin-bottom 15px
		&:last-child
			margin-bottom 0
			border-bottom none
			padding-bottom 0


.congress-schedule__wrapper
	.form__wrapper
		margin-top 75px		

// gallery
.congress-gallery
	position relative
	padding 300px 0 175px
	&:before
		pseudo()
		position absolute
		width 1224px
		height 1128px
		background url('../img/back.png') 50% 50% no-repeat / contain
		position-center()
		z-index -1
		margin-top 40px
		margin-left 200px
	&__title
		font 52px $Bold
		line-height 1.1
		margin-bottom 35px
		
		&--col
			.congress-gallery__text
				display none
		
		&--brasil
			text-transform uppercase
			color $secondary-color
			font 95px $Eng
			line-height 1
			white-space nowrap
			span
				display inline-block
				position relative
				z-index 5
				pointer-events none
		
	&__entering
		max-width 1020px
		
		.congress-gallery__text

			max-width 205px
			

.congress-gallery__text
	font-size 18px
	color $lighter-text-color
			
// sect imax
.sect__imax
	padding 235px 0 180px
	background $accent-color url('../img/backgrounds/cinema-bg.jpg') center bottom no-repeat / cover
	

.imax
	
	&__entering
		position relative
		padding-top 130px
		z-index 1
		margin-bottom 100px
		img
			display block
			max-width 870px
			position absolute
			top 0
			z-index -1
			horisontal-center()
			
	&__title
		
		
		max-width 660px
		margin 0 auto
		span
			color $secondary-color
			
	&-advantages
		margin-top 100px
		&__row
			margin-left -65px
			margin-right -65px
		
	&-advantage
		font 20px $SemiBold
		position relative
		&:before
			content '+'
			display block
			font-family $Reg
			font-size 30px
		&__wrapper
			padding-left 65px
			padding-right 65px
			

// Prices
.sect__prices
	padding-top 180px
	
.prices
	img
		display block
		mix-blend-mode soft-light
		
.prices-title
	margin-bottom 60px
	&__brazil
		display block
		text-transform uppercase
		color #ebc86a
		font-family $Eng
		font-size  158px
		
		mix-blend-mode soft-light
		line-height 1
		white-space nowrap
		margin-bottom 40px
		


.prices-packages__row
	margin-left -22.5px
	margin-right -22.5px
	
.prices-package
	flex 1
	position relative
	overflow hidden
	padding 70px 40px 45px 40px
	margin-bottom 50px
	&:before
		pseudo()
		position absolute
		fullSize()
		background-color rgba($basic-white-color, .4)
		mix-blend-mode overlay
		
	&__title
		font 26px $SemiBold
		margin-bottom 40px
		
	&__content
		position relative
		z-index 1
		display flex
		flex-direction column
		height 100%
		
		ul
			flex 1
			margin-bottom 40px
			li
				position relative
				padding-left 30px
				font-size 14px
				margin-bottom 10px
				&:last-child
					margin-bottom 0
				&:before
					content '>'
					display inline-block
					position absolute
					left 0
					top 1px
					
	&__price
		color $secondary-color
		white-space nowrap
		font 64px $Eng
		margin-bottom 10px
		line-height 1
	&__old-price
		font 30px $Eng
		white-space nowrap
		position relative
		display inline-block
		&:before
			pseudo()
			position absolute
			vertical-center()
			left -6px
			margin-top 4px
			width 115px
			height 15px
			background url('../img/red_line.svg') no-repeat
	
		
	
	&__wrapper
		padding 0 22.5px 45px
		display flex
		flex-direction column
		
// Sect contcts
.sect__contacts
	padding-top 135px
	padding-bottom 80px
	
.contacts__title
	margin-bottom 75px
	
.contacts
	&-information
		padding-right 30px
		&__title
			font 26px $SemiBold
			margin-bottom 25px
		&__address
			font-family $SemiBold
			
		&__date
			font 64px $Eng
			color $secondary-color
			margin-top 80px
			span
				display block
				color $basic-white-color
				font 26px $SemiBold
	&-img
		max-width 760px
		img
			display block
			


		

	