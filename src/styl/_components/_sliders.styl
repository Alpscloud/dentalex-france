.slider
	&__loader
		position absolute
		fullSize()
		z-index 10
		background-color $light-color
		transition all .15s ease-in-out
		&:before
			pseudo()
			width 30px
			height 30px
			position absolute
			position-center()
			background url('../img/slider-loader.gif') 50% 50% no-repeat / 30px 30px
			
		&.is-loaded
			opacity 0
			visibility hidden
			pointer-events none
			
	&-navigation
		white-space nowrap
		height 70px
		width 160px
		display flex
		justify-content space-between
		
		&__btn
			display inline-block
			width 70px
			height 70px
			position relative
			background-color $alternate-accent-color
			border-radius 20px
			box-shadow  0px 14px 26px -16px rgba($alternate-accent-color,0.94)
			svg
				svg()
				position absolute
				position-center()
				width 20px
				height 20px
				fill $basic-white-color
				
				
			&:hover
				background-color $accent-color
				box-shadow none
				svg
					fill $basic-white-color
					
		&__transparent
			.slider-navigation__btn
				background-color transparent
				box-shadow none
				border 1px solid $basic-black-color
				svg
					fill $basic-black-color
				&:hover
					background-color $accent-color
					border-color $accent-color
					svg
						fill $basic-white-color
		&__light
			.slider-navigation__btn
				background-color transparent
				border 1px solid $basic-white-color
				box-shadow none
				svg
					fill $basic-white-color
				&:hover
					background-color $basic-white-color
					svg
						fill $basic-black-color
			
.swiper-container
	*
		box-sizing border-box



.speaker-slider
	width 1550px
	position relative
	&__wrapper
		position relative
		z-index 2
		
	.swiper-slide
		width 810px
	
	.slider-navigation
		z-index 2
		position absolute
		bottom 35px
		left 610px
	

		

.speaker-slide
	position relative
	padding-bottom 63px
	span
		display inline-block
		position absolute
		left 30px
		color $accent-color
		z-index 1
		bottom 0
		font 124px $Eng
		line-height 1
		pointer-events none
	.thumbnail
		display block
		padding-top 63%
		&:hover
			opacity .85
			
	&__title
		font 30px $SemiBold
		margin-bottom 30px
			

.live-show-slider
	overflow hidden
	.slider-navigation
		float right
		margin-top 30px
		
	.swiper-slide
		opacity 0
		
	&__mobile
		display none
		

.congress-gallery__slider
	position relative
	z-index 1
	.swiper-slide
		width 800px
		
	.thumbnail
		padding-top 58%
		
	&--navigation
		max-width 985px
		margin-top 45px