.form__wrapper
	padding 15px 20px
	background-color $form-bg
	&.left-gutter
		padding-left 30px
	
	&--accent
		background-color $accent-color
		box-shadow 0px 14px 26px -16px rgba(3,70,255,0.94)
		
		.form-input
			color $basic-white-color
			
.form-block
	.btn-popup
		display none

.form
	&-input
		display block
		width 100%
		padding 0
		text-align left
		font 16px $Med
		color $text-color
		&:hover,
		&:focus
			border-color $accent-color
		&::-webkit-input-placeholder
			font 16px $Med
			color inherit
		&::-moz-placeholder
			font 16px $Med
			color inherit
		&:-moz-placeholder
			font 16px $Med
			color inherit
		&:-ms-input-placeholder
			font 16px $Med
			color inherit
			
		&.is-error
			border-color red
			
	&-group
		position relative
		&:last-child
			margin-bottom 0
			
	&-label
		display flex
		align-items center
		justify-content flex-start
		flex-wrap nowrap
		&__ic
			display inline-block
			flex none
			width 35px
			height 35px
			margin-right 15px
	
			svg
				svg()
				fill $basic-black-color
		
		&.is-error
			svg
				fill red
				
		&:hover
			svg
				fill $secondary-color
			
	&-textarea
		min-height 200px
	



.form
	&-checkbox
		display inline-block
		position relative
		padding-left 25px
		font 1em $Reg
		line-height 1
		color $text-color
		&:before
			pseudo()
			transition all .17s ease-in-out
			position absolute
			left 0
			vertical-center()
			border-radius 2px
			width 16px
			height 16px
			border 1px solid $text-color
			background-position 50% 50%
			background-repeat no-repeat
			background-size 12px 12px
			
		&__label
			display inline-block
			input
				display none
				&:checked
					+ span
						&:before
							background-color $text-color
							background-image url('../img/icons/svg/checkbox-ic.svg')
							
.form
	&-radio
		display inline-block
		position relative
		padding-left 25px
		font 1em $Reg
		line-height 1
		color $text-color
		&:before
			pseudo()
			transition all .17s ease-in-out
			position absolute
			left 0
			vertical-center()
			border-radius 50%
			width 16px
			height 16px
			border 1px solid $text-color
		&:after
			pseudo()
			transition all .17s ease-in-out
			position absolute
			left 2px
			top 2px
			width 12px
			height 12px
			border-radius 50%
			background-color $text-color
			display none
			

			
		&__label
			display inline-block
			input
				display none
				&:checked
					+ span
						&:after
							display block


.default-form
	.form-group
		margin-bottom 15px
		border-bottom 1px solid rgba(#7f7f7f, .1)
		padding-bottom 15px
		&:last-child
			padding-bottom 0
			margin-bottom 0
			border-bottom none
			margin-top 30px

