.phone-link
	display inline-block
	width 70px
	height 70px
	flex none
	position relative
	border 1px solid $basic-black-color
	border-radius 50%
	margin-left 45px
	&__ic
		position absolute
		position-center()
		display block
		border-radius 50%
		background-color $accent-color
		transition background-color .17s ease-in-out
		width 50px
		height 50px
		
		svg
			svg()
			width 30px
			height 26px
			fill $basic-white-color
			position absolute
			position-center()
		
	&:hover
		border-color $accent-color
		span
			background-color $secondary-color
			
			svg
				fill $basic-white-color
				
.fancy-link
	display block
	&:hover
		opacity .85
		

.letters-animation
	span
		opacity 0
	&.is-animated
		> span
			animation letter-glow 2.3s 0s ease both
		
@keyframes letter-glow 
	0% 
		opacity 0
		text-shadow 0px 0px 1px rgba(255, 255, 255, 0.2)

	66% 
		opacity 1
		text-shadow 0px 0px 20px rgba(255, 255, 255, 0.9)

	77% 
		opacity 1

	100% 
		opacity 1
		text-shadow 0px 0px 20px rgba(255, 255, 255, 0)